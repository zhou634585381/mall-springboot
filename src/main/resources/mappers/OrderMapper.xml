<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mall.mapper.OrderMapper">
    <resultMap id="OrderMap" type="com.example.mall.entity.Order">
        <result column="order_id" property="orderId" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="product_id" property="productId" jdbcType="INTEGER"/>
        <result column="product_num" property="productNum" jdbcType="INTEGER"/>
        <result column="product_price" property="productPrice" jdbcType="DOUBLE"/>
        <result column="order_time" property="orderTime" jdbcType="BIGINT"/>
    </resultMap>
    <select id="getUserId" resultMap="OrderMap">
    SELECT `order`.*, product.product_name AS productName, product.product_picture AS productPicture
    FROM `order`, product
    WHERE `order`.product_id = product.product_id
    AND `order`.user_id = #{userId}
    </select>
</mapper>
